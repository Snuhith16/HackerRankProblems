#include<stdio.h>
int main(){
    
    int n;
  scanf("%d", &n);
    
  if(n>=2){
    for(int i=0; i<=n-1; ++i){
        for(int j=0; j<=n-1; ++j){
            if(j==0 || i==j){
                printf("*");
            }
            else
            printf(" ");
        }
        printf("\n");
    }
  for(int i=1; i<=n-1; ++i){
        for(int j=0; j<=n-1; ++j){
            if(j==0 || i+j==n-1){
                printf("*");
            }
            else
            printf(" ");
        }
        printf("\n");
    }
  }
  else{
    printf("Shape Not Possible");
  }
}
